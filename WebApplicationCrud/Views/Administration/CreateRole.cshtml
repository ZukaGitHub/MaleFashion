@model WebApplicationCrud.ViewModels.PanelVMs.CreateRoleViewModel


    <link href="~/css/Authorized/Authorized.css" rel="stylesheet" />

    <div class="wrapper d-flex align-items-stretch">
        <partial name="_AdministrationSidebar">

            <div id="content" class="p-4 p-md-5 pt-5" style="width:100%">
                <h1>Create New Role</h1>
                <div class="row">
                    <div class="col-md-12">
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="RoleName"></label>
                                <input asp-for="RoleName" type="text" name="RoleInput" />
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Register Role</button>
                        </form>
                    </div>
                </div>
                </div>
            </div>
