@model WebApplicationCrud.ViewModels.PanelVMs.EditRoleViewModel
    <link href="~/css/Authorized/Authorized.css" rel="stylesheet" />

    <div class="wrapper d-flex align-items-stretch">
        <partial name="_AdministrationSidebar">

            <div id="content" class="p-4 p-md-5 pt-5" style="width:100%">
                <h1>Edit Role</h1>


                <form method="post" class="mt-3">
                    <div class="form-group row">
                        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Id" disabled class="form-control" />

                        </div>

                    </div>
                    <div class="form-group row">
                        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="RoleName" class="form-control" />
                            <span asp-validation-for="RoleName" class="text-danger"></span>

                        </div>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Update</button>
                            <a asp-action="GetRoles" asp-controller="Administration">Cancel</a>
                        </div>

                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h3>Users Assigned to this Role</h3>
                        </div>
                        <div class="card-body">
                            @if (Model.Users.Any())
                            {
                                foreach (var user in Model.Users)
                                {
                                    <h5 class="card-title">@user</h5>
                                }
                            }
                            else
                            {
                                <h5 class="card-title">No Users</h5>
                            }
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary"
                               asp-action="EditUsersInRole"
                               asp-controller="Administration"
                               asp-route-id="@Model.Id"
                               style="width:auto">
                                Add or Remove Users
                            </a>
                        </div>
                    </div>
                </form>
                </div>
             </div>