@model CheckOutViewModel

<html>
<head>
    <script src="https://js.stripe.com/v3/"></script>
</head>

<body>
    <div class="checkout__wrapper">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="ProductList">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var line in Model.ShoppingCartViewModel.ShoppingCart.ShoppingCartItems)
                            {
                                <tr>
                                    <td class="product__cart__item">
                                        <div class="product__cart__item__pic">
                                            <img src="img/shopping-cart/cart-1.jpg" alt="">
                                        </div>
                                        <div class="product__cart__item__text">
                                            <h6>@line.Product.Name</h6>
                                            <h5>@line.Product.Price</h5>
                                            <h5>@line.SizeText</h5>

                                        </div>
                                    </td>
                                    <td class="quantity__item">
                                        <div class="quantity">
                                            <div class="pro-qty-2">
                                                <input type="text" value="@line.Amount">
                                            </div>
                                        </div>
                                    </td>
                                    <td class="cart__price">@((line.Amount * line.Product.Price).ToString("c"))</td>
                                    <td class="cart__close"><i class="fa fa-close"></i></td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>

            </div>
            <div class="cardPayment">
                <!-- Display a payment form -->
                <!-- Display a payment form -->
                <form id="payment-form">
                    <div id="payment-element">
                        <!--Stripe.js injects the Payment Element-->
                    </div>
                    @*<button id="submit">
                        <div class="spinner hidden" id="spinner"></div>
                        <span id="button-text">Pay now</span>
                    </button>*@
                    <div id="payment-message" class="hidden"></div>
                </form>

            </div>

            <div class="deliveryInfo">
                <form asp-controller="CheckOut" asp-action="PlaceOrder">
                    <div>
                        <label>Country</label>
                        <input class="form-control ajaxvalue" required type="text" value="@Model.DeliveryInfo.Country" />
                    </div>
                    <div>
                        <label>City</label>
                        <input type="text" required class="form-control ajaxvalue" value="@Model.DeliveryInfo.City" />
                    </div>
                    <div>
                        <label>Street</label>
                        <input type="text" required class="form-control ajaxvalue" value="@Model.DeliveryInfo.Street" />
                    </div>
                    <div>
                        <label>Address</label>
                        <input type="text" required class="form-control ajaxvalue" value="@Model.DeliveryInfo.Address" />
                    </div>
                    <div>
                        <label>Address2</label>
                        <input type="text" class="form-control ajaxvalue " value="@Model.DeliveryInfo.Address2" />
                    </div>
                    <div>
                        <label>Additional Description</label>
                        <input type="text" required class="form-control ajaxvalue" value="@Model.DeliveryInfo.AdditionalDescription" />
                    </div>

                    <span style="display:block" onclick="editAddress" class="btn btn-primary mt-2">Edit Address</span>

                    <button type="submit" class="btn btn-danger mb-2">Place Order</button>
                </form>
            </div>
        }
        else
        {
            <p><a asp-action="Login" asp-controller="Auth">Sign In</a> to Check Out</p>
        }
    </div>
</body>

           
</html>
<script src="~/js/checkout.js" defer></script>
<script>
    $(document).ready(function () {

        function editAddress() {
            function get_filter(class_name) {

                var filter = $(class_name).val;

                return filter;
            };

            var country = get_filter("country")
            var city = get_filter("city")
            var street = get_filter("street")
            var address = get_filter("address")
            var address2 = get_filter("address2")
            var additionalInformation = get_filter("additionalInformation")
            var model = { Country: country, City: city, Street: street, Address: address, Address2: address2, AdditionalIformation: additionalInformation }
            $.ajax({
                url: "EditAddress",
                type: "POST",
                data: {model},
                success:
            })
        }




        function get_filter(class_name) {

            var filter = $(class_name).val;
           
            return filter;
        };

    })

</script>