@model List<Order>
    <head>
        <title>List Of Products</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href="~/css/Authorized/Authorized.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/js/DatatableAssets/extensions/filter-control/bootstrap-table-filter-control.min.css" />
        <link href="~/js/DatatableAssets/bootstrap-table.css" rel="stylesheet" />

    </head>
    <body>

        <div class="wrapper d-flex align-items-stretch">
            <partial name="_AdministrationSidebar">

                <!-- Page Content  -->
                <div id="content" class="p-4 p-md-5 pt-5 container">
                    <h2 class="mb-4">List Of Products</h2>
                    <div id="toolbar">
                        <button class="btn btn-danger"
                                data-toggle="modal"
                                data-target="#RemoveRowsModal">
                            Remove Selected Rows
                        </button>
                        <button class="btn btn-dark"
                                id="EditTheseRows"
                                data-toggle="modal"
                                data-target="#AppointRowsModal">
                            Edit These Rows
                        </button>

                        <button id="Problematic" class="btn btn-warning Toggle">Toggle Problematic</button>
                        <button id="Sent" class="btn btn-success Toggle">Toggle Sent</button>
                        <button id="Received" class="btn btn-dark Toggle">Toggle Received</button>
                        <button id="Received" class="btn btn-danger Toggle">Toggle Default</button>
                    </div>


                    <table id="table"
                           data-toggle="table"
                           data-pagination="true"
                           data-search="true"
                           data-show-fullscreen="true"
                           data-show-toggle="true"
                           data-toolbar="#toolbar"
                           data-advanced-search="false"
                           data-id-table="advancedTable"
                           data-filter-control="true"
                           data-filter-show-clear="true">


                        <thead>
                            <tr>
                                <th data-filed="state" data-checkbox="true"></th>
                                <th data-field="Id">Id</th>
                                <th data-field="OrderStatus">OrderStatus</th>
                                <th data-field="UserName">UserName</th>
                                <th data-field="PhoneNumber">PhoneNumber</th>
                                <th data-field="Color">Color</th>
                                <th data-field="SizeText">SizeText</th>
                                <th data-field="Quantity" data-sortable="true">Quantity</th>
                                <th data-field="Countryt">Country</th>
                                <th data-field="City">City</th>
                                <th data-field="Street">Street</th>
                                <th data-field="Address">Address</th>
                                <th data-field="Address2">Address2</th>
                                <th data-field="AdditionalDescription">AdditionalDescription</th>
                                <th data-field="OrderDate">OrderDate</th>
                                <th data-field="OrderTotal">OrderTotal</th>
                                <th data-field="action" data-formatter="actionFormatter">Actions</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                @foreach (var Order in Model)
                                {
                                    @foreach (var OrderDetail in Order.OrderDetails)
                                    {
                            <tr>
                                <td>
                                </td>
                                <td>
                                    @Order.Id
                                </td>
                                <td>
                                    @Order.OrderStatus
                                </td>                              
                                <td>
                                    @Order.user?.UserName
                                </td>
                                <td>
                                    @Order.user?.PhoneNumber
                                </td>
                                <td>
                                    @OrderDetail.ProductInfo?.Color
                                </td>
                                <td>
                                    @OrderDetail.SizeText

                                </td>
                                <td>
                                    @OrderDetail.Quantity
                                </td>
                                <td>
                                    @Order.user?.DeliveryInfo.Country
                                </td>
                                <td>
                                    @Order.user?.DeliveryInfo.City
                                </td>
                                <td>
                                    @Order.user?.DeliveryInfo.Street
                                </td>
                                <td>
                                    @Order.user?.DeliveryInfo.Address
                                </td>
                                <td>
                                    @Order.user?.DeliveryInfo.Address2
                                </td>
                                <td>
                                    @Order.user?.DeliveryInfo.AdditionalDescription
                                </td>
                                <td>
                                    @Order.OrderDate
                                </td>
                                <td>
                                    @Order.OrderTotal
                                </td>
                                <td>

                                </td>
                            </tr>
                                    }
                                    }
                                }
                            </tbody>
                    </table>

                </div>
        </div>

    </body>

 @*Add Change Order State Action------------------------------------------------------------*@
    <script src="~/js/DatatableAssets/bootstrap-table.min.js"></script>
    <script src="~/js/DatatableAssets/extensions/toolbar/bootstrap-table-toolbar.min.js"></script>
    <script src="~/js/DatatableAssets/extensions/filter-control/bootstrap-table-filter-control.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
        var table = $('#table')
        $('.Toggle').on('click', function (e) {
            var rows = $.map(table.bootstrapTable('getSelections'), function (row) {

                return row

            })
            console.log(rows);
            let formdata = new FormData()
            for (let i = 0; i < rows.length; i++) {
                formdata.append("Ids[" + i + "]", rows[i].Id)
                rows[i].State=e.Id
             
            }
            axios({
                method: 'post',
                url: '/Panel/ChangeOrderState',
                data: formdata
            })
                .then(function (response) {
                    console.log(response);
                    window.location.reload();
                })
                .catch(function (error) {
                    console.log(error);
                });

            console.log(rows)
        })
       

    </script>
 