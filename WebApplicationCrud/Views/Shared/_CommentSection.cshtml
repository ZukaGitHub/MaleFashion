@model CommentViewModel

@using Microsoft.AspNetCore.Identity;


<div>
    <form method="post" asp-controller="Home" asp-action="Comment">
        <input asp-for="PostId" type="hidden" />
        <input asp-for="MainCommentId" type="hidden" />
        <textarea class="Comment" asp-for="Message"></textarea>
        <span asp-validation-for="Message"></span>
        <button class="btn btn-dark" type="submit">Comment</button>
    </form>
</div>