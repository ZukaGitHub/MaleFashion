@model WebApplicationCrud.ViewModels.ShoppingCartViewModel



<!DOCTYPE html>
<html lang="zxx">


<body>

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Shopping Cart</h4>
                        <div class="breadcrumb__links">
                            <a asp-action="Index" asp-controller="Home">Home</a>
                            <a asp-action="Shop" asp-controller="Home">Shop</a>
                            <span>Shopping Cart</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    <!-- Shopping Cart Section Begin -->
    <section class="shopping-cart spad">
        <div class="container">
            <div class="row">
               
                <div class="offCanvasWidth col col-lg-8 col-12 col-sm-12 ">
                    <div class="shopping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
                                {
                                    <tr>
                                        <td class="product__cart__item">
                                            <div style="max-width:200px;max-height:200px;" class="product__cart__item__pic">
                                                <img style="max-width:200px; max-height:200px;" src="~/img/productAndBlogAddedImages/@line.ProductInfo.ProductInfoThumbnailName" alt="">
                                            </div>
                                            <div class="product__cart__item__text">
                                                <h6>@line.Product.Name</h6>
                                                <h5>@line.Product.Price</h5>

                                            </div>
                                        </td>
                                        <td class="quantity__item">
                                            <div class="quantity">
                                                <div class="pro-qty-2">
                                                    <input type="text" value="@line.Amount">
                                                </div>
                                            </div>
                                        </td>
                                        <td class="cart__price">@((line.Amount * line.Product.Price).ToString("c"))</td>
                                        <td class="cart__close"><i class="fa fa-close"></i></td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="offCanvasWidth col-lg-6 col-md-6 col-12 col-sm-12">
                            <div class="continue__btn">
                                <a asp-action="Shop" asp-controller="Home">Continue Shopping</a>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="offCanvasWidth col col-lg-4 col-12 col-sm-12">
                    <div class="cart__discount">
                        <h6>Discount codes</h6>
                        <form action="#">
                            <input type="text" placeholder="Coupon code">
                            <button type="submit">Apply</button>
                        </form>
                    </div>
                    <div class="cart__total">
                        <h6>Cart total</h6>
                        <ul>
                            <li>Subtotal <span>@Model.ShoppingCartTotal</span></li>
                            <li>Total <span>@Model.ShoppingCartTotal</span></li>
                        </ul>
                        <a class="btn btn-dark" style="color:white" asp-action="Index" asp-controller="CheckOut">Proceed to checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>

</html>
